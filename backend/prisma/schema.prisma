generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id String @id @default(uuid())
  title String @unique
  year String
  genre String
  director String
  writer String
  actors String
  poster String?
  posterWide String?
  ratings Json
  metascore String
  isSeen Boolean @default(false)
  createdAt DateTime @default(now()) @map("created_at")
}